generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id                 String          @id @default(cuid())
  ssafyId            String          @unique
  bojHandle          String          @unique
  campus             String
  classNum           Int
  name               String
  tier               Int             @default(0)
  rating             Int             @default(0)
  solvedCount        Int             @default(0)
  maxStreak          Int             @default(0)
  currentStreak      Int             @default(0)
  totalPoint         Int             @default(0)
  previousRank       Int?
  rankUpdatedAt      DateTime?
  profileImage       String?
  bio                String?
  lastUpdatedAt      DateTime?
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  initialSolvedCount Int             @default(0)
  initialTier        Int             @default(0)
  badges             Badge[]
  seasonHistory      SeasonHistory[]
}

model SeasonHistory {
  id               String   @id @default(cuid())
  userId           String
  seasonName       String
  finalSolvedCount Int
  finalTier        Int
  earnedPoint      Int
  rank             Int?
  createdAt        DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, seasonName])
}

model Badge {
  id        String   @id @default(cuid())
  userId    String
  type      String
  awardedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
}

model DailyProblem {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  problems  String
}
