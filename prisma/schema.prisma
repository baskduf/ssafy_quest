generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id                 String          @id @default(cuid())
  ssafyId            String          @unique
  bojHandle          String          @unique
  campus             String
  classNum           Int
  name               String
  tier               Int             @default(0)
  rating             Int             @default(0)
  solvedCount        Int             @default(0)
  maxStreak          Int             @default(0)
  currentStreak      Int             @default(0)
  totalPoint         Int             @default(0)
  previousRank       Int?
  rankUpdatedAt      DateTime?
  profileImage       String?
  bio                String?
  lastUpdatedAt      DateTime?
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  initialSolvedCount Int             @default(0)
  initialTier        Int             @default(0)
  badges             Badge[]
  seasonHistory      SeasonHistory[]
  raidParticipations RaidParticipation[]
}

model SeasonHistory {
  id               String   @id @default(cuid())
  userId           String
  seasonName       String
  finalSolvedCount Int
  finalTier        Int
  earnedPoint      Int
  rank             Int?
  createdAt        DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, seasonName])
}

model Badge {
  id        String   @id @default(cuid())
  userId    String
  type      String
  awardedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
}

model DailyProblem {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  problems  String
}

model ClassRanking {
  id           String   @id @default(cuid())
  campus       String
  classNum     Int
  previousRank Int?
  updatedAt    DateTime @updatedAt

  @@unique([campus, classNum])
}

// ==================== Raid System ====================

enum RaidStatus {
  READY
  ACTIVE
  SUCCESS
  FAIL
}

model Raid {
  id            String     @id @default(cuid())
  title         String
  description   String?
  imageUrl      String?
  problemId     Int
  maxHp         Int
  currentHp     Int
  damagePerHit  Int        @default(1)
  bonusPoint    Int        @default(0)
  status        RaidStatus @default(READY)
  startAt       DateTime
  endAt         DateTime
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  participations RaidParticipation[]
}

model RaidParticipation {
  id            String    @id @default(cuid())
  raidId        String
  userId        String
  isSolved      Boolean   @default(false)
  solvedAt      DateTime?
  lastAttemptAt DateTime?
  pointAwarded  Boolean   @default(false)
  createdAt     DateTime  @default(now())

  raid Raid @relation(fields: [raidId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([raidId, userId])
}
